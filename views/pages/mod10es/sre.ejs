  - type: web
    name: meu-app-python
    env: python
    buildCommand: pip install -r requirements.txt
    startCommand: gunicorn app:app
    envVars:
      - key: PORT
        value: 8000
    domains:
      - www.meu-app-python.com
                            </code></pre>
            </div>
          </div>
        </div>
